<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.StockListActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_stocklist_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="189dp"
        tools:listitem="@layout/cardview_item"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_fab_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:backgroundTint="@color/fabAddItem"
        android:focusable="true"

        app:layout_constraintBottom_toBottomOf="@+id/activity_stocklist_recyclerview"
        app:layout_constraintEnd_toEndOf="@+id/activity_stocklist_recyclerview"
        app:srcCompat="@drawable/ic_add_item" />


</androidx.constraintlayout.widget.ConstraintLayout>