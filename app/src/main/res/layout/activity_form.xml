<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FormActivity">

    <EditText
        android:id="@+id/activity_form_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_margin="8dp"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_form_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:hint="Price"
        app:layout_constraintEnd_toEndOf="@id/activity_form_name"
        app:layout_constraintStart_toStartOf="@+id/activity_form_name"
        app:layout_constraintTop_toBottomOf="@+id/activity_form_name" />

    <EditText
        android:id="@+id/activity_form_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:hint="Quantity"
        app:layout_constraintEnd_toEndOf="@id/activity_form_price"
        app:layout_constraintStart_toStartOf="@+id/activity_form_price"
        app:layout_constraintTop_toBottomOf="@+id/activity_form_price" />

</androidx.constraintlayout.widget.ConstraintLayout>